{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {},
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "noEmit": false,
    "strict": true,
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}